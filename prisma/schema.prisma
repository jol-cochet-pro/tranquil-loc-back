generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(uuid())
  email         String      @unique
  password      String
  otp           String?
  firstname     String
  lastname      String
  dateOfBirth   DateTime
  opennedEmail  Int
  phone         String
  searchState   SearchState
  type          UserType
  emailVerified Boolean
  infosFilled   Boolean

  occupants  Occupant[]
  warrantors Warrantor[]
}

model Warrantor {
  id            String        @id @default(uuid())
  firstname     String
  lastname      String
  email         String
  homeSituation HomeSituation
  proSituation  ProSituation
  income        Int
  dateOfBirth   DateTime
  phone         String
  documents     Document[]
  user          User          @relation(fields: [userId], references: [id])
  userId        String
}

model Occupant {
  id            String        @id @default(uuid())
  firstname     String
  lastname      String
  email         String
  homeSituation HomeSituation
  proSituation  ProSituation
  income        Int
  dateOfBirth   DateTime
  phone         String
  documents     Document[]
  user          User          @relation(fields: [userId], references: [id])
  userId        String
}

model Document {
  id          String       @id @default(uuid())
  type        DocumentType
  key         String       @unique
  occupant    Occupant?    @relation(fields: [occupantId], references: [id])
  occupantId  String?
  warrantor   Warrantor?   @relation(fields: [warrantorId], references: [id])
  warrantorId String?
}

enum HomeSituation {
  TENANT
  OWNER
  OTHER
}

enum DocumentType {
  IDENTITY_DOCUMENTS
  PROOF_OF_ADDRESS
  TAX_NOTICE
  EMPLOYMENT_CONTRACT
  LAST_THREE_PAYSLIPS
  PENSION_CERTIFICATE
  APPRENTICESHIP_FORM
  SCHOOL_ENROLLMENT_CERTIFICATE
  ARE_CERTIFICATE
  JOB_OFFER
  EMPLOYER_CERTIFICATE
  REGISTRATION_SIRENE
  FINANCIAL_STATEMENT
  OTHER

  @@map("DocumentName")
}

enum ProSituation {
  CDD
  CDI
  RETIRED
  APPRENTICE
  UNEMPLOYED
  STUDENT
  OFFICIAL
  FREELANCE
  OTHER
}

enum SearchState {
  SEARCHING
  PAUSED
}

enum UserType {
  OCCUPANT
  WARRANTOR
  OTHER
}
