generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  email        String      @unique
  password     String
  firstname    String
  lastname     String
  dateOfBirth  DateTime
  opennedEmail Int
  phone        String
  searchState  SearchState
  type         UserType
}

model Occupant {
  id            String        @id @default(uuid())
  firstname     String
  lastname      String
  email         String
  homeSituation HomeSituation
  proSituation  ProSituation
  income        Int
  phone         String
  documents     Document[]
}

model Document {
  id         String   @id @default(uuid())
  name       String
  url        String
  occupant   Occupant @relation(fields: [occupantId], references: [id])
  occupantId String

  @@unique([name, occupantId])
}

enum HomeSituation {
  TENANT
  OWNER
  OTHER
}

enum ProSituation {
  CDD
  CDI
  RETIRED
  APPRENTICE
  UNEMPLOYED
  STUDENT
  OFFICIAL
  FREELANCE
  OTHER
}

enum SearchState {
  SEARCHING
  PAUSED
}

enum UserType {
  TENANT
  WARRANTOR
  OTHER
}
