generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(uuid())
  email         String      @unique
  password      String
  otp           String?
  firstname     String
  lastname      String
  dateOfBirth   DateTime
  opennedEmail  Int
  phone         String
  searchState   SearchState
  type          UserType
  emailVerified Boolean
  infosFilled   Boolean

  occupants Occupant[]
}

model Occupant {
  id            String        @id @default(uuid())
  firstname     String
  lastname      String
  email         String
  homeSituation HomeSituation
  proSituation  ProSituation
  income        Int
  dateOfBirth   DateTime
  phone         String
  documents     Document[]
  user          User          @relation(fields: [userId], references: [id])
  userId        String
}

model Document {
  id         String   @id @default(uuid())
  name       String
  url        String
  occupant   Occupant @relation(fields: [occupantId], references: [id])
  occupantId String

  @@unique([name, occupantId])
}

enum HomeSituation {
  TENANT
  OWNER
  OTHER
}

enum ProSituation {
  CDD
  CDI
  RETIRED
  APPRENTICE
  UNEMPLOYED
  STUDENT
  OFFICIAL
  FREELANCE
  OTHER
}

enum SearchState {
  SEARCHING
  PAUSED
}

enum UserType {
  OCCUPANT
  WARRANTOR
  OTHER
}
